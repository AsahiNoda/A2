@page
@model InterportCargoQuotationSystem.Pages.Quotations.IndexModel

<h2 class="text-primary">All Quotations</h2>
@if (!Model.IsLoggedIn)
{
    <div class="alert alert-warning">
        <strong>You must be logged in to view quotations.</strong><br />
        <a class="btn btn-primary mt-2" asp-page="/Login">Login</a>
    </div>
}
else
{
    <form method="get" class="mb-3">
        <label>Filter by status:</label>
        <select name="status" class="form-select w-auto d-inline-block me-2">
            <option value="">All</option>
            <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
            <option value="Accepted" selected="@(Model.Status == "Accepted")">Accepted</option>
            <option value="Rejected" selected="@(Model.Status == "Rejected")">Rejected</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Customer Email</th>
                <th>Date Issued</th>
                <th>Container</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model.Quotations)
            {
                <tr>
                    <td>@q.Id</td>
                    <td>@q.CustomerEmail</td>
                    <td>@q.DateIssued.ToShortDateString()</td>
                    <td>@q.ContainerCount</td>
                    <td>
                        @switch (q.Status)
                        {
                            case "Accepted":
                                <span class="text-success fw-bold">Accepted</span>
                                ; break;
                            case "Rejected":
                                <span class="text-danger fw-bold">Rejected</span>
                                ; break;
                            default:
                                <span class="text-warning fw-bold">Pending</span>
                                ; break;
                        }
                    </td>
                    <td>
                        <a asp-page="/Quotations/View" asp-route-id="@q.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <a asp-page="/Quotations/Delete" asp-route-id="@q.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}