@page
@model InterportCargoQuotationSystem.Pages.Quotations.IndexModel

<div class="container mt-4">
    <h2 class="text-primary">Quotation List</h2>

    @if (!Model.IsLoggedIn)
    {
        <div class="alert alert-warning">
            You must be logged in to view quotations.
            <a class="btn btn-outline-primary mt-2" asp-page="/Login">Go to Login</a>
        </div>
    }
    else if (!Model.Quotations.Any())
    {
        <div class="alert alert-info">No quotations found.</div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Email</th>
                    <th>Container Count</th>
                    <th>Base Price</th>
                    <th>Quarantine</th>
                    <th>Fumigation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model.Quotations)
                {
                    <tr>
                        <td>@q.CustomerEmail</td>
                        <td>@q.ContainerCount</td>
                        <td>$@q.BasePrice</td>
                        <td>@(q.RequiresQuarantine ? "Yes" : "No")</td>
                        <td>@(q.RequiresFumigation ? "Yes" : "No")</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Quotations/Edit" asp-route-id="@q.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
