@page
@model InterportCargoQuotationSystem.Pages.LoginModel
@{
    Layout = "_Layout";
}

<h2 class="text-primary">Customer Login</h2>

<form method="post" class="p-4 border bg-light rounded">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (Model.ErrorMessage != null)
{
    <p class="text-danger mt-2 fw-bold">@Model.ErrorMessage</p>
}

<p class="mt-3">
    Don't have an account? <a asp-page="/Register">Register here</a>
</p>

