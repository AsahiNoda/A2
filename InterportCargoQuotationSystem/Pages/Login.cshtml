@page
@model InterportCargoQuotationSystem.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-primary">Customer Login</h2>

    <form method="post" class="p-4 border bg-light rounded">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Login</button>
    </form>

    @if (Model.Message != null)
    {
        <div class="alert alert-danger mt-3">@Model.Message</div>
    }

    <p class="mt-3">
        Don’t have an account? <a asp-page="/Register">Register here</a>
    </p>
</div>
