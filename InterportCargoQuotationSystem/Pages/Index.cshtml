@page
@model IndexModel

@{
    Layout = "_Layout";
}

<style>
    .hero-section {
        position: relative;
        height: 100vh;
        width: 100%;
        background-image: url('/Images/home-banner.png');
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 80px; 
    }

    .hero-content {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 3rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        transform: translateY(-20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
    }

    .hero-content p {
        font-size: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .btn-container {
        position: fixed;
        bottom: 100px; 
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 20px;
        z-index: 1000;
    }

    .btn-container .btn {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-width: 2px;
        transition: all 0.3s ease;
    }

    .btn-container .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="display-4">Welcome to InterportCargo Quotation System</h1>
        <p class="lead mt-3">Your trusted partner in international cargo transportation</p>
        <a class="btn btn-primary btn-lg mt-4" asp-page="/Login">Login</a>
    </div>
</div>

<div class="btn-container">
    <a class="btn btn-outline-light" asp-page="/Register">Register as Customer</a>
    <a class="btn btn-outline-light" asp-page="/RegisterEmployee">Register as Employee</a>
</div>
