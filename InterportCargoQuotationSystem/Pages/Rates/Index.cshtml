@page
@model InterportCargoQuotationSystem.Pages.Rates.IndexModel

<h2>Rate Schedule</h2>

@if (!Model.Rates.Any())
{
    <p>No rate data available.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Origin</th>
                <th>Destination</th>
                <th>Container Type</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rate in Model.Rates)
            {
                <tr>
                    <td>@rate.Origin</td>
                    <td>@rate.Destination</td>
                    <td>@rate.ContainerType</td>
                    <td>@String.Format("${0:0.00}", rate.Price)</td>
                </tr>
            }
        </tbody>
    </table>
}
