@page
@model InterportCargoQuotationSystem.Pages.Quotations.CreateModel

<h2 class="text-primary">Create Quotation</h2>


<form method="post" class="p-4 border bg-light rounded">
    <div class="mb-3">
        <label asp-for="Quotation.CustomerEmail" class="form-label">Customer Email</label>
        <input asp-for="Quotation.CustomerEmail" type="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Quotation.ContainerCount" class="form-label">Container Count</label>
        <input asp-for="Quotation.ContainerCount" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.BasePrice" class="form-label">Base Price</label>
        <input asp-for="Quotation.BasePrice" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.OriginCountry" class="form-label">Origin Country</label>
        <input asp-for="Quotation.OriginCountry" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.DestinationCountry" class="form-label">Destination Country</label>
        <input asp-for="Quotation.DestinationCountry" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.PackageType" class="form-label">Package Type</label>
        <input asp-for="Quotation.PackageType" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.PackageWidth" class="form-label">Package Width (cm)</label>
        <input asp-for="Quotation.PackageWidth" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quotation.PackageHeight" class="form-label">Package Height (cm)</label>
        <input asp-for="Quotation.PackageHeight" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-check mb-2">
        <input asp-for="Quotation.RequiresQuarantine" class="form-check-input" />
        <label asp-for="Quotation.RequiresQuarantine" class="form-check-label">Requires Quarantine</label>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Quotation.RequiresFumigation" class="form-check-input" />
        <label asp-for="Quotation.RequiresFumigation" class="form-check-label">Requires Fumigation</label>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

