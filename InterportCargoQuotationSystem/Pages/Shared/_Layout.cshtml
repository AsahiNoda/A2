<!DOCTYPE html>
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterportCargoQuotationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InterportCargoQuotationSystem.styles.css" asp-append-version="true" />
</head>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">InterportCargoQuotationSystem</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext?.Session.GetString("EmployeeType") == "Quotation officer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Rates/Index">Rate Schedule</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @if (TempData["Message"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            @RenderBody()
        </main>

    </div>

    <footer class="footer-custom text-center py-3">
        <div>
            &copy; 2025 - InterportCargoQuotationSystem -
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>