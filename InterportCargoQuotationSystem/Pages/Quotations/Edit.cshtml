@page
@model InterportCargoQuotationSystem.Pages.Quotations.EditModel

<div class="container mt-4">
    <h2 class="text-primary">Edit Quotation</h2>

    @if (!Model.IsLoggedIn)
    {
        <div class="alert alert-warning">
            You must be logged in to edit quotations.
            <a class="btn btn-outline-primary mt-2" asp-page="/Login">Go to Login</a>
        </div>
    }
    else
    {
        <form method="post" class="p-4 border bg-white shadow-sm rounded">
            <div class="mb-3">
                <label asp-for="Quotation.CustomerEmail" class="form-label">Email</label>
                <input asp-for="Quotation.CustomerEmail" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Quotation.ContainerCount" class="form-label">Container Count</label>
                <input asp-for="Quotation.ContainerCount" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Quotation.BasePrice" class="form-label">Base Price</label>
                <input asp-for="Quotation.BasePrice" class="form-control" />
            </div>

            <div class="form-check mb-2">
                <input asp-for="Quotation.RequiresQuarantine" class="form-check-input" />
                <label asp-for="Quotation.RequiresQuarantine" class="form-check-label">Requires Quarantine</label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Quotation.RequiresFumigation" class="form-check-input" />
                <label asp-for="Quotation.RequiresFumigation" class="form-check-label">Requires Fumigation</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Update</button>
        </form>
    }
</div>
